<div class="accordion" style="padding: 1.5rem 0; border-bottom: initial;">
    <h2 class="h4 accordion__title font-bold">
        {{ section.settings.heading }}
    </h2>
    
    {% for block in section.blocks %}
        {% case block.type %}
        {% when 'product_highlight' %}
            <div class="flex">
                <div class="flex" style="flex: 0 0 auto; width: 33%;">
                    {% render 'icon-accordion', icon: block.settings.highlight_icon %}
                    {{ block.settings.highlight_description }}
                </div>
            </div>
        {% when '@app' %}
            {% render block %}
        {% endcase %}
    {% endfor %}
</div>

